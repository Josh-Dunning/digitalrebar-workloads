apiVersion: v1
kind: Pod
metadata:
  name: kube-apiserver
spec:
  hostNetwork: true
  containers:
  - name: kube-apiserver
    image: {{ hyperk8s.image_repo }}:{{ hyperk8s.image_tag }}
    command:
    - /hyperkube
    - apiserver
    - --advertise-address={{ ip | default(ansible_default_ipv4.address) }}
    - --etcd-servers={% for srv in groups['etcd'] %}http://{{ hostvars[srv]['access_ip'] | default(hostvars[srv]['ip']|default(hostvars[srv]['ansible_default_ipv4']['address'])) }}:2379{% if not loop.last %},{% endif %}{% endfor %}
    - --admission-control=NamespaceLifecycle,NamespaceExists,LimitRanger,SecurityContextDeny,ServiceAccount,ResourceQuota
    - --service-cluster-ip-range={{ k8s.service_addresses }}
    - --client-ca-file={{ k8s.cert_dir }}/ca.pem
    - --basic-auth-file={{ k8s.users_dir }}/known_users.csv
    - --tls-cert-file={{ k8s.cert_dir }}/apiserver.pem
    - --tls-private-key-file={{ k8s.cert_dir }}/apiserver-key.pem
    - --service-account-key-file={{ k8s.cert_dir }}/apiserver-key.pem
    - --secure-port={{ k8s.apiserver_port }}
    - --insecure-port={{ k8s.apiserver_insecure_port }}
{% if k8s.api_runtime_config is defined %}
{%   for conf in k8s.api_runtime_config %}
    - --runtime-config={{ conf }}
{%   endfor %}
{% endif %}
    - --token-auth-file={{ k8s.token_dir }}/known_tokens.csv
    - --v={{ k8s.log_level | default('2') }}
    - --allow-privileged=true
    ports:
    - containerPort: {{ k8s.apiserver_port }}
      hostPort: {{ k8s.apiserver_port }}
      name: https
    - containerPort: {{ k8s.apiserver_insecure_port }}
      hostPort: {{ k8s.apiserver_insecure_port }}
      name: local
    volumeMounts:
    - mountPath: {{ k8s.config_dir }}
      name: kubernetes-config
      readOnly: true
    - mountPath: /etc/ssl/certs
      name: ssl-certs-host
      readOnly: true
  volumes:
  - hostPath:
      path: {{ k8s.config_dir }}
    name: kubernetes-config
  - hostPath:
      path: /etc/ssl/certs/
    name: ssl-certs-host
