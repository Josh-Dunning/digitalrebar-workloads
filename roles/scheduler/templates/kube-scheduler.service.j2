[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStart=/usr/bin/kube-scheduler \
  --leader-elect=true \
  --master=http://{{ip}}:{{k8s.apiserver.insecure_port}} \
  --v={{k8s.log.level}}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
